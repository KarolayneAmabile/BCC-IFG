#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct
{
    char primeiroNome[100];
    char sobrenome[100];
} nomeCompleto;

typedef struct
{
    char rua[100];
    char complemento[100];
    char cidade[100];
    char estado[2];
    char cep[8];
} enderecoCompleto;

typedef struct
{
    nomeCompleto nome;
    char email[100];
    char numeroTelefone[100];
    enderecoCompleto endereco;
} cliente;

int main()
{
    cliente pessoa;

    do
    {
        printf("Insira primeiro nome: ");
        gets(pessoa.nome.primeiroNome);
        fflush(stdin);
    } while (strlen(pessoa.nome.primeiroNome) == 0);

    do
    {
        printf("Insira sobrenome: ");
        gets(pessoa.nome.sobrenome);
        fflush(stdin);
    } while (strlen(pessoa.nome.sobrenome) == 0);

    printf("Insira e-mail: ");
    gets(pessoa.email);
    fflush(stdin);

    printf("Insira numero de relefone: ");
    gets(pessoa.numeroTelefone);
    fflush(stdin);

    printf("\nENDERECO\n");

    do
    {
        printf("Rua: ");
        gets(pessoa.endereco.rua);
        fflush(stdin);
    } while (strlen(pessoa.endereco.rua) == 0);

    do
    {
        printf("Complemento: ");
        gets(pessoa.endereco.complemento);
        fflush(stdin);
    } while (strlen(pessoa.endereco.complemento) == 0);


    do
    {
        printf("Cidade: ");
        gets(pessoa.endereco.cidade);
        fflush(stdin);
    } while (strlen(pessoa.endereco.cidade) == 0);


    do
    {
        printf("Estado: ");
        gets(pessoa.endereco.estado);
        fflush(stdin);
    } while (strlen(pessoa.endereco.estado) == 0);


    do
    {
        printf("CEP: ");
        gets(pessoa.endereco.cep);
        fflush(stdin);
    } while (strlen(pessoa.endereco.cep) == 0);

    return 0;
}
